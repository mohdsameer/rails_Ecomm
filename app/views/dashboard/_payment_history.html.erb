        <option value="50">50</option>
        <option value="100">100</option>
      </select>
    </div>

    <div><%= pagination_information(payments) %></div>

    <div class="d-flex">
      <div class="pagination">
        <%= will_paginate(payments, previous_label: '<', next_label: '>', page_links: false) %>
