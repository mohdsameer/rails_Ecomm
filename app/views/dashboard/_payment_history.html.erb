<div class="history_wrap">
  <div class="history_head">Payment History</div>
  <table class="history_table">
    <tr class="w-100">
      <th class="th">Date</th>
      <th class="th">Amount</th>
    </tr>

    <% payments.each do |payment| %>
      <tr>
        <td class="td"><%= payment.paid_at.strftime('%m/%d/%Y') %></td>
        <td class="td">$<%= format_number(payment.amount.to_f.round(2)) %></td>
      </tr>
    <% end %>
  </table>

  <div class="pages_content" data-controller="pagination">
    <div> Rows per page: </div>

