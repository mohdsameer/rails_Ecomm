<% pv.each do |producer_variant| %>
  <div class="tbody_row" data-controller="expand-image">
    <div class="td one"><%= producer_variant.variant.product.id%></div>
    <div class="td two">
      <div class="product_img">
        <% if producer_variant.variant.product.image.attached? %>
          <%= image_tag producer_variant.variant.product.image %>
        <% else %>
          <%= image_tag asset_path('dummy-product.png') %>
        <% end %>

        <%= link_to producer_variant.variant.product.image, class: 'zoom_img lightbox_trigger' do %>
          <%= image_tag 'ic_expand.png', alt: 'icon', class: 'expand_icon' %>
        <% end %>
      </div>
    </div>
    <div class="td three"><%= producer_variant.variant.product.name%></div>
    <div class="td four"><%= producer_variant.variant.product.brand_name%></div>
    <div class="td five"><%= producer_variant.variant.real_variant_sku%></div>
    <div class="td six"><%= producer_variant.variant.color%></div>
    <div class="td seven"><%= producer_variant.variant.size%> oz</div>
    <div class="td eight">
      <div class="aisle_box">
        <div class="asle_no">A11</div>
        <%= link_to edit_aisle_no_variant_path(producer_variant.variant), data: {turbo_frame: "edit-aisle-modal"}, class: "aisle_icon" do %>
          <%= image_tag 'ic_edit.png', alt: 'icon', class: 'ic_edit' %>
        <% end %>
      </div>
    </div>
    <div class="td nine">
      <% if producer_variant.inventory.to_i > 100 %>
        <div class="badgee in_stock">In Stock</div>
      <% elsif producer_variant.inventory.to_i <= 100 && producer_variant.inventory.to_i > 0 %>
        <div class="badgee low_stock">Low Stock</div>
      <%else%>
        <div class="badgee out_of_stock">Out of Stock</div>
      <%end%>
    </div>
    <div class="td ten">
      <div class="aisle_box">
        <div class="asle_no"><%= producer_variant.inventory.to_i %></div>
        <a href="<%= edit_inventory_variant_path(id:  producer_variant.variant.id, producerId: producer_variant.producer.id ) %>"  data-turbo-frame="edit-inventory-modal" class="aisle_icon invntry_qty " ><%= image_tag 'ic_edit.png', alt: 'icon', class: 'ic_edit' %> </a>
      </div>
    </div>
  </div>
<% end %>