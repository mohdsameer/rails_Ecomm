<turbo-frame id="add-new-product-order-modal">
  <div id= "select_pop_wrap_model" class="select_pop_wrap_model variant_pop" data-controller="modals" data-modals-modal-id-value="select_pop_wrap_model">
    <div class=" select_pop_wrap_outer">
      <div class="select_pop_wrap">
        <div class="select_head">
          Product Variants
          <%= image_tag "red_close", alt:"icon", class:"close_icon" %>
        </div>

        <div class="select_content"
             data-controller="search"
             data-search-url-value="<%= select_variant_orders_path %>"
             data-search-params-value="<%= { product_id: @product.id }.to_json %>">

          <div class="select_search_box">
            <%= image_tag "search", alt:"icon", class:"search_icon" %>
            <input class="search_input" type="text" placeholder="Search Variant" data-search-target="query" />
          </div>

          <div class="product_name">
            <%= image_tag "Divider", alt:"icon", class:"devider_icon" %> 
            <%= image_tag "Divider", alt:"icon", class:"devider_icon" %>
            <span><%= @product.name %></span>
          </div>
          <div class="scroll_section" data-search-target="results">
            <%= render 'variants_list', variants: @variants, product: @product, order: @order %>
          </div>

          <div class="back_to_btn_section">
            <%= link_to add_new_product_orders_path, class: "back_to_btn", data: { turbo_frame: "add-new-product-order-modal" } do %>
              <%= image_tag "dark_start_icon", alt: "icon", class: "icon" %>
              <div class="btn_text">Back to Choose a Product</div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
