<turbo-frame id="order-form-content">
  <%= form_tag order_path, method: :patch,  multipart: true, id: 'order-form', class: 'product_form', data: { controller: 'order-form-status', 'order-form-status-target': 'form', 'turbo-frame': '_top' } do %>
    <div class="tab" id="step1">
      <div class="product_list_section">
        <% order.order_products.not_temporary_removed.order(created_at: :asc).group_by(&:user_id).each do |producer_id, order_products| %>
          <% if order_products.present? && producer_id.present? %>
            <% producer = Producer.find(producer_id) %>

            <div class="ship_from_wrap">
              <div class="icon_wrap">
                <%= image_tag "truck" %>
                <% if producer.present? %>
                  <div class="icon_text">Ships from <%= producer.name %></div>
                <% else %>
                  <a href="<%= all_producer_orders_path %>"  data-turbo-frame="all-producer-order-modal" class= "choose_pro_link">
                    <span>Choose Producer</span>
                    <%= image_tag 'edit_row.png', alt: 'icon', class: 'choose_icon' %>
                  </a>
                <% end %>
              </div>

              <%= image_tag 'ic_expand_more.png', alt: 'icon', class: 'toggle_icon' %>
            </div>

            <div class="collapse_data" data-controller="quantity">
              <% order_products.each do |order_product| %>
                <input type="hidden" name="variant" class="variantId" id="<%= order_product.variant.id %>" />
                <div class="content_container">
                  <div class="left_wrap">
                    <div class="card_wrapper">
                      <div class="card_head"><%= order_product.product.name %></div>
                      <div class="card_img_wrapper">
                        <div class="content_img">
                          <div class="image_box">
                            <% if order_product.variant.image.attached? %>
                              <%= image_tag order_product.variant.image %>
                            <% else %>
                              <%= image_tag asset_path('dummy-product.png') %>
                            <% end %>
                          </div>
                          <div class="btn_wrap">
                            <div class="outline_btn"><%= order_product.variant.color %></div>
                            <div class="plus_minus_wrap">
                              <%= hidden_field_tag "producers_variants[#{order_product.id}]", order_product.product_quantity.to_i, class: "quantity_input qty", id: "quantity-input-#{order_product.id}", data: { 'quantity-target': 'quantityInput', 'max-value': order_product.max_inventory } %>

                              <span class="qty_num" data-quantity-target="quantityText" id="qty_num_<%= order_product.id %>">
                                <% if order_product.product_quantity.present?%>
                                  <%= order_product.product_quantity %>
                                <% else %>
                                  0
                                <% end %>
                              </span>

                              <div class="button-container">
                                <button class="cart-qty-minus" type="button" value="-" data-quantity-target="decrement" data-item-id="<%= order_product.id %>">-</button>
                                <button class="cart-qty-plus" type="button" value="+" data-quantity-target="increment" data-item-id="<%= order_product.id %>">+</button>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="card_wrapper">
                      <div class="card_head">Front Side</div>
                      <div class="card_img_wrapper">
                        <div class="content_img shadow_box">
                          <div class="image_box">
                            <div class="avatar-upload">
                              <% if order_product.front_side_image.attached? %>
                                <div class="avatar-preview">
                                  <%= image_tag order_product.front_side_image, alt: 'img', class: 'preview_img' %>
                                    <%= link_to order_product.front_side_image, class: 'zoom_img lightbox_trigger' do %>
                                      <%= image_tag 'ic_expand.png', alt: 'icon', class: 'expand_icon' %>
                                  <% end %>
                                </div>
                              <% else %>
                                <div class="avatar-edit">
                                  <%= file_field_tag "front_side_image[#{order_product.id}]", accept: ".png, .jpg, .jpeg", class: "upload_field", id: "front_side_image_#{order_product.id}", data: { 'order-form-status-target': 'frontImage' } %>
                                  <label for="front_side_image_<%= order_product.id %>" class="upload_wrapper">
                                      <%= image_tag 'upload.png', alt: 'icon', class: 'upload_icon' %>
                                      <div class="image_type">PNG</div>
                                      <div class="upload_text">Upload Here</div>
                                    <div class="click_here">Click here to upload</div>
                                  </label>
                                </div>
                              <% end %>
                            </div>
                          </div>
                          <% if order_product.front_side_image.attached? %>
                            <div class="btn_wrap">
                               <%= link_to remove_product_image_order_path(order, order_product_id: order_product.id, front_side_image: order_product.front_side_image), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                                <%= image_tag 'ic_trash.png', alt: 'icon' %>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                    <div class="card_wrapper">
                      <div class="card_head">Back Side</div>
                      <div class="card_img_wrapper">
                        <div class="content_img shadow_box">
                          <div class="image_box">
                            <div class="avatar-upload">
                              <% if order_product.back_side_image.attached? %>
                                <div class="avatar-preview">
                                  <%= image_tag order_product.back_side_image, alt: 'img', class: 'preview_img' %>
                                  <%= link_to order_product.back_side_image, class: 'zoom_img lightbox_trigger' do %>
                                    <%= image_tag 'ic_expand.png', alt: 'icon', class: 'expand_icon' %>
                                  <% end %>
                                </div>
                              <% else %>
                                <div class="avatar-edit">
                                  <%= file_field_tag "back_side_image[#{order_product.id}]", accept: ".png, .jpg, .jpeg", class: "upload_field", id: "back_side_image_#{order_product.id}", data: { 'order-form-status-target': 'backImage' } %>
                                  <label for="imageUpload_<%= order_product.id %>" class="upload_wrapper">
                                    <%= image_tag 'upload.png', alt: 'icon', class: 'upload_icon' %>
                                    <div class="image_type">PNG</div>
                                      <div class="upload_text">Upload Here</div>
                                    <div class="click_here">Click here to upload</div>
                                  </label>
                                </div>
                              <% end %>
                            </div>
                          </div>
                          <% if order_product.back_side_image.attached? %>
                            <div class="btn_wrap">
                              <%= link_to remove_product_image_order_path(order, order_product_id: order_product.id, back_side_image: order_product.back_side_image), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                                <%= image_tag 'ic_trash.png', alt: 'icon' %>
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="right_wrap">
                    <%= link_to remove_product_order_path(order, order_product_id: order_product.id), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                      <%= image_tag 'ic_trash.png', alt: 'icon', class: 'trash' %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>

      <div class="product_list_section upload_file_wrap">
        <div class="ship_from_wrap">
          <div class="icon_wrap">
            <div class="icon_text">Upload File</div>
          </div>
          <%= image_tag 'ic_expand_more.png', alt: 'icon', class: 'toggle_icon' %>
        </div>

        <div class="collapse_data">
          <div class="upload_section">
            <div class="upload_box">
              <div class="upload_header">Shipping Label</div>
              <% if @order.shipping_label_image.attached? %>
                <% if @order.shipping_label_image.representable? %>
                  <%= image_tag @order.shipping_label_image, class: "content_img" %>

                  <%= link_to @order.shipping_label_image, class: 'zoom_img lightbox_trigger mx-auto' do %>
                    View
                  <% end %>
                <% else %>
                  <%= link_to rails_blob_url(@order.shipping_label_image, only_path: true), class: 'pdf_link mx-auto', target: '_blank' do %>
                    <%= @order.shipping_label_image.filename.to_s %>
                  <% end %>
                <% end %>

                <div class="btn_wrap mx-auto">
                  <%= link_to remove_design_files_order_path(order, shipping_label_image: true), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                    <%= image_tag 'ic_trash.png', alt: 'icon' %>
                  <% end %>
                </div>
              <% else %>
                <div class="upload_item">
                  <%= file_field_tag "shipping_label_image", class: 'file_upload', data: { 'order-form-status-target': 'designFile' } %>
                  <label class="upload_label" for="shipping_label_image">
                    <%= image_tag 'ic_cloud_upload.png', alt: 'icon', class: 'upload_cloud' %>
                    <div class="upload_text">Upload file</div>
                  </label>
                </div>
              <% end %>
            </div>

            <div class="upload_box">
              <div class="upload_header">Packing Slip</div>
              <% if @order.packing_slip_image.attached? %>
                <% if @order.packing_slip_image.representable? %>
                  <%= image_tag @order.packing_slip_image, class: "content_img" %>

                  <%= link_to @order.packing_slip_image, class: 'zoom_img lightbox_trigger mx-auto' do %>
                    View
                  <% end %>
                <% else %>
                  <%= link_to rails_blob_url(@order.packing_slip_image, only_path: true), class: 'pdf_link mx-auto', target: '_blank' do %>
                    <%= @order.packing_slip_image.filename.to_s %>
                  <% end %>
                <% end %>

                <div class="btn_wrap mx-auto">
                  <%= link_to remove_design_files_order_path(order, packing_slip_image: true), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                    <%= image_tag 'ic_trash.png', alt: 'icon' %>
                  <% end %>
                </div>
              <% else %>
                <div class="upload_item">
                  <%= file_field_tag "packing_slip_image", class: 'file_upload', data: { 'order-form-status-target': 'designFile' } %>
                  <label class="upload_label" for="packing_slip_image">
                    <%= image_tag 'ic_cloud_upload.png', alt: 'icon', class: 'upload_cloud' %>
                    <div class="upload_text">Upload file</div>
                  </label>
                </div>
              <% end %>
            </div>

            <div class="upload_box">
              <div class="upload_header">Gift Message Slip</div>
              <% if @order.gift_message_slip_image.present? %>
                <% if @order.gift_message_slip_image.representable? %>
                  <%= image_tag @order.gift_message_slip_image, class: "content_img" %>

                  <%= link_to @order.gift_message_slip_image, class: 'zoom_img lightbox_trigger mx-auto' do %>
                    View
                  <% end %>
                <% else %>
                  <%= link_to rails_blob_url(@order.gift_message_slip_image, only_path: true), class: 'pdf_link mx-auto', target: '_blank' do %>
                    <%= @order.gift_message_slip_image.filename.to_s %>
                  <% end %>
                <% end %>

                <div class="btn_wrap mx-auto">
                  <%= link_to remove_design_files_order_path(order, gift_message_slip_image: true), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                    <%= image_tag 'ic_trash.png', alt: 'icon' %>
                  <% end %>
                </div>
              <% else %>
                <div class="upload_item">
                  <%= file_field_tag "gift_message_slip_image", class: 'file_upload', data: { 'order-form-status-target': 'designFile' } %>
                  <label class="upload_label" for="gift_message_slip_image">
                    <%= image_tag 'ic_cloud_upload.png', alt: 'icon', class: 'upload_cloud' %>
                    <div class="upload_text">Upload file</div>
                  </label>
                </div>
              <% end %>
            </div>

            <div class="upload_box">
              <div class="upload_header">Design File 1</div>
              <% if @order.design_file_1_image.present? %>
                <% if @order.design_file_1_image.representable? %>
                  <%= image_tag @order.design_file_1_image, class: "content_img" %>

                  <%= link_to @order.design_file_1_image, class: 'zoom_img lightbox_trigger mx-auto' do %>
                    View
                  <% end %>
                <% else %>
                  <%= link_to rails_blob_url(@order.design_file_1_image, only_path: true), class: 'pdf_link mx-auto', target: '_blank' do %>
                    <%= @order.design_file_1_image.filename.to_s %>
                  <% end %>
                <% end %>

                <div class="btn_wrap mx-auto">
                  <%= link_to remove_design_files_order_path(order, design_file_1_image: true), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                    <%= image_tag 'ic_trash.png', alt: 'icon' %>
                  <% end %>
                </div>
              <% else %>
                <div class="upload_item">
                  <%= file_field_tag "design_file_1_image", class: 'file_upload', data: { 'order-form-status-target': 'designFile' } %>
                  <label class="upload_label" for="design_file_1_image">
                    <%= image_tag 'ic_cloud_upload.png', alt: 'icon', class: 'upload_cloud' %>
                    <div class="upload_text">Upload file</div>
                  </label>
                </div>
              <% end %>
            </div>

            <div class="upload_box">
              <div class="upload_header">Design File 2</div>
              <% if @order.design_file_2_image.present? %>
                <% if @order.design_file_2_image.representable? %>
                  <%= image_tag @order.design_file_2_image, class: "content_img" %>

                  <%= link_to @order.design_file_2_image, class: 'zoom_img lightbox_trigger mx-auto' do %>
                    View
                  <% end %>
                <% else %>
                  <%= link_to rails_blob_url(@order.design_file_2_image, only_path: true), class: 'pdf_link mx-auto', target: '_blank' do %>
                    <%= @order.design_file_2_image.filename.to_s %>
                  <% end %>
                <% end %>

                <div class="btn_wrap mx-auto">
                  <%= link_to remove_design_files_order_path(order, design_file_2_image: true), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                    <%= image_tag 'ic_trash.png', alt: 'icon' %>
                  <% end %>
                </div>
              <% else %>
                <div class="upload_item">
                  <%= file_field_tag "design_file_2_image", class: 'file_upload', data: { 'order-form-status-target': 'designFile' } %>
                  <label class="upload_label" for="design_file_2_image">
                    <%= image_tag 'ic_cloud_upload.png', alt: 'icon', class: 'upload_cloud' %>
                    <div class="upload_text">Upload file</div>
                  </label>
                </div>
              <% end %>
            </div>

            <div class="upload_box">
              <div class="upload_header">Additional File</div>
              <% if @order.additional_file_image.present? %>
                <% if @order.additional_file_image.representable? %>
                  <%= image_tag @order.additional_file_image, class: "content_img" %>

                  <%= link_to @order.additional_file_image, class: 'zoom_img lightbox_trigger mx-auto' do %>
                    View
                  <% end %>
                <% else %>
                  <%= link_to rails_blob_url(@order.additional_file_image, only_path: true), class: 'pdf_link mx-auto', target: '_blank' do %>
                    <%= @order.additional_file_image.filename.to_s %>
                  <% end %>
                <% end %>

                <div class="btn_wrap mx-auto">
                  <%= link_to remove_design_files_order_path(order, additional_file_image: true), data: { 'turbo-method': 'delete' }, class: 'link_box' do %>
                    <%= image_tag 'ic_trash.png', alt: 'icon' %>
                  <% end %>
                </div>
              <% else %>
                <div class="upload_item">
                  <%= file_field_tag "additional_file_image", class: 'file_upload', data: { 'order-form-status-target': 'designFile' } %>
                  <label class="upload_label" for="additional_file_image">
                    <%= image_tag 'ic_cloud_upload.png', alt: 'icon', class: 'upload_cloud' %>
                    <div class="upload_text">Upload file</div>
                  </label>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="product_list_section additional_comments_wrap">
        <div class="ship_from_wrap">
          <div class="icon_wrap">
            <div class="icon_text"><%= label_tag :additional_comment %></div>
          </div>
          <%= image_tag 'ic_expand_more.png', alt: 'icon', class: 'toggle_icon' %>
        </div>

        <div class="collapse_data">
          <div class="leave_any">
            <label>Leave any additional comments here</label>
            <%= text_field_tag :additional_comment, @order.additional_comment %>
          </div>
        </div>
      </div>
    </div>

    <div class="btn_wrapper mb-5">
      <%= hidden_field_tag :user_id, params[:producer_id] %>
      <%= hidden_field_tag :submit_type, 'save_later', data: { 'order-form-status-target': 'submitType' } %>
      <% if current_user.type.eql?('Designer') %>

        <% if @order.order_edit_status.eql?("completed")%>
          <%= link_to 'Marked as Completed by designer', 'javascript:;', disabled: true, class: 'btn_wrap d-none', data: { 'order-form-status-target': 'markComplete' } %>
            <div class="btn_wrap">
              <%= image_tag "ic_done_all", alt:"icon" %>
              Marked as Completed
              </div>
        <% else %>
          <%= link_to 'Marked as Completed', 'javascript:;', class: 'btn_wrap dark_green', data: { 'order-form-status-target': 'markComplete' } %>
        <% end %>

      <% else %>

        <% if @order.assign_details.present? && @order.order_edit_status.eql?('completed') %>
          <%= link_to 'Marked as Completed by designer', 'javascript:;', disabled: true, class: 'btn_wrap d-none', data: { 'order-form-status-target': 'markComplete' } %>
          <div class="btn_wrap">
            <%= image_tag "ic_done_all", alt:"icon" %>
            Marked as Completed by <%= @order.assignee_name %>
          </div>
        <% else %>
          <%= link_to 'Designer is not assign', 'javascript:;', class: 'btn_wrap dark_green d-none', data: { 'order-form-status-target': 'markComplete' } %>
        <% end %>

      <% end %>

      <% if current_user.type.eql?('Admin')%>

        <% if order.request_revision.present?%>
          <div class='btn_wrap blue_bg fw-bolder'>
              Revision requested
              <%= image_tag "ic_checkmark", alt:"icon", class:"icon" %>
          </div>
        <% else %>
          <% if order.assign_details.present? && order.order_edit_status.eql?('completed') %>
            <%= link_to request_revision_order_path(order), data: { turbo_frame: "request-revision-order-modal" }, class: 'btn_wrap blue_outline fw-bolder' do %>
              Request Revision
              <%= image_tag "blue_user_group", alt:"icon", class:"icon" %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= link_to 'Save Order for Later', 'javascript:;', class: 'btn_wrap light_green', data: { 'order-form-status-target': 'saveLater' } %>
      <% if current_user.type.eql?('Admin')%>
        <%= link_to('javascript:;', class: 'btn_wrap black_bg', data: { 'order-form-status-target': 'goShipping' }) do %>
          <%= image_tag("white_end", class: "end_icon") %>
          Shipping
        <% end %>
      <% else %>
        <%= link_to('javascript:;', class: 'btn_wrap black_bg d-none', data: { 'order-form-status-target': 'goShipping' }) do %>
          <%= image_tag("white_end", class: "end_icon") %>
          Shipping
        <% end %>
      <% end %>

      <%= submit_tag 'submit', class: '', id: 'submit-order-form', data: { 'order-form-status-target': 'submit' }, style: 'display:none;' %>
    </div>
  <% end %>
</turbo-frame>
