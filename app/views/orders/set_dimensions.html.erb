<turbo-frame id="set-dimensions">
  <div id= "all_producer_model" class="select_pop_wrap_model" data-controller="modals" data-modals-modal-id-value="all_producer_model">
    <div class="select_pop_wrap_outer">
      <div class="select_pop_wrap">
        <div class="select_head">
          Shipping Package Details
          <%= image_tag "close", alt: "icon", class: "close_icon" %>
        </div>

        <%= form_tag update_dimensions_order_path(@order), data: { 'turbo-frame': '_top' } do %>
          <div class="form-group px-4">
            <%= label_tag 'Length' %>
            <%= number_field_tag :custom_length, @order.custom_length, step: 0.1, class: 'form-control', placeholder: 'xx' %>
          </div>

          <div class="form-group px-4">
            <%= label_tag 'Height' %>
            <%= number_field_tag :custom_height, @order.custom_height, step: 0.1, class: 'form-control', placeholder: 'xx' %>
          </div>

          <div class="form-group px-4">
            <%= label_tag 'Width' %>
            <%= number_field_tag :custom_width, @order.custom_width, step: 0.1, class: 'form-control', placeholder: 'xx' %>
          </div>

          <div class="form-group px-4">
            <%= label_tag 'Weight LB' %>
            <%= number_field_tag :custom_weight_lb, @order.custom_weight_lb, step: 0.1, class: 'form-control', placeholder: 'xx' %>
          </div>

          <div class="form-group px-4">
            <%= label_tag 'Weight OZ' %>
            <%= number_field_tag :custom_weight_oz, @order.custom_weight_oz, step: 0.1, class: 'form-control', placeholder: 'xx' %>
          </div>

          <%= submit_tag 'save', class: 'btn btn-success ms-4 my-4' %>
        <% end %>
      </div>
    </div>
  </div>
</turbo-frame>
