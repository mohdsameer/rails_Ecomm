<turbo-frame id="reject-order-modal">
  <div id="reject_popup" class="reject_popup" data-controller="modals" data-modals-modal-id-value="reject_popup">
    <div class="reject_popup_wrapper">
      <div class="reject_pop_box">
        <div class="you_sure">Are you sure you want to reject this order?</div>
        <div class="reject_body">

          <%= form_for @order, url: order_path(@order, request_type: "Reject") do |o| %>
            <div class="send_text h-100 w-100">
              <%= o.label :Add_a_Comment %>
              <%= o.text_area :reject_reason ,class: "w-100", placeholder: "A product was already printed. Please let me know how to proceed with this order" %>
            </div>

            <div class="reject_foot">
              <%= o.submit 'Reject', data: { 'turbo-frame': '_top' },class: "btn orange_btn text-light reject_btn" %>
              <button type="button" class="btn bg-light text-dark btn-outline-dark cancel_btn close_reject_popup">Cancel</button>
            </div>
          <%end%>
        </div>
      </div>>

      <div class="cancel_flash">
        <div class="cancel_head">Order is Rejected.</div>
        <div class="cross_icon close_reject_popup">
