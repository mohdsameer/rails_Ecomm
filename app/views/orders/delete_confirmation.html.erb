<turbo-frame id="destroy-order-modal">
  <div id="reject_popup" class="reject_popup" data-controller="modals" data-modals-modal-id-value="reject_popup">
    <div class="reject_popup_wrapper">
      <div class="reject_pop_box">
        <div class="you_sure">
          <%= image_tag 'delete.png', alt: 'icon' %>Delete Order?</div>
        <div class="reject_body"> Are you sure you want to delete this order? Deleted orders can not be retrieved
          <div class="reject_foot">
            <%= link_to 'Delete',order_path(@order), data: { 'turbo-method': :delete }, class: 'more_link btn orange_btn text-light reject_btn', data_turbo_frame: 'destroy-order-modal' %>
            <button type="button" class="btn bg-light text-dark btn-outline-dark cancel_btn close_reject_popup">Cancel</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>
