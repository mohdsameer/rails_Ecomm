                              <div><%=order.assignee_name%></div>
                            <%else%>
                              <!-- <div><%#= link_to 'Assignee',assignee_order_path(order) %></div> -->
                              <span>-</span>
                            <%end%>
                          </div>
                        </div>
                        <div class="order_td nine"><%=order.order_date%></div>
                        <div class="order_td ten">
